doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css')
  title KYC Registration form

  .container
    .container(style='background-color: black;')
      h1.text-center(style='color: white;') GENQ KYC FORM
      br
    legend(style='color: grey; font-weight: bolder;') Bio Data
    hr
    form#regForm(action='#', name='register', onsubmit='return Validate(),success();', method='POST')
      fieldset
        div(style='text-align: right;')
          div(style='float: right;')
            input#lname(type='text', name='lastname', placeholder='Last name')
            small#lnameErr
          div(style='float: left;')
            input#fname(type='text', name='firstname', placeholder='First name')
            small#fnameErr
        div(style='text-align: right;')
          div(style='float: right;')
            select#gender(name='gender')
              option(value='') Select gender
              option(value='Male') Male
              option(value='Female') Female
            small#genderErr
          div(style='float: left;')
            input#dob(type='date', name='dob')
            small#dobErr
        legend(style='color: grey; font-weight: bolder;') Location
        hr
        div(style='text-align: right;')
          div(style='float: right;')
            input(type='text', name='state', placeholder='State/District')
            small#stateErr
          div(style='float: left;')
            input#town(type='text', name='Town', placeholder='Town')
            small#townErr
        div(style='text-align: right;;')
          div(style='float: right;')
            input#zip(type='text', name='zipcode', placeholder='Zip code')
            small#zipErr
          div(style='float: left;')
            select#gender(name='country')
              option(value='') Country
              option(value='Uganda') Uganda
              option(value='Kenya') Kenya
              option(value='Tanzania') Tanzania
              option(value='Rwanda') Rwanda
              option(value='Burundi') Burundi
        legend(style='color: grey; font-weight: bolder;') Contacts and Address
        hr
        div(style='text-align: right;')
          div(style='float: right;')
            input#pnumber(type='phonenumber', name='phone2', placeholder='Phone Number 1')
            small#phoneErr2
          div(style='float: left;')
            input#pnumber(type='tel', name='phone1', placeholder='Phone Number 1')
            small#phoneErr1
        div
          div
            input#email(style='width: 82vw;', type='email', name='email', placeholder='Email')
            small#emailErr
        button#submit.btn.btn-warning.btn-lg(style='float: right; margin:10px; width: 30vw;', type='submit') Submit
    if message
      .alert.alert-success(role='alert')
        = message
script(src='/js/index.js')
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js')
